# Docker Environment Configuration
# Copy this file to .env and update values for your environment

# Environment
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://inventory_user:inventory_password@postgres:5432/inventory_management

# Redis Configuration
REDIS_URL=redis://redis:6379

# Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production

# Logging
LOG_LEVEL=INFO

# AWS Configuration (for production)
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# API Gateway URL (for UI service)
API_GATEWAY_URL=http://api-gateway:8000

# Service Ports (for reference)
API_GATEWAY_PORT=8000
INVENTORY_SERVICE_PORT=8001
LOCATION_SERVICE_PORT=8002
USER_SERVICE_PORT=8003
REPORTING_SERVICE_PORT=8004
UI_SERVICE_PORT=8005

# Database Ports (for local development)
POSTGRES_PORT=5432
REDIS_PORT=6379